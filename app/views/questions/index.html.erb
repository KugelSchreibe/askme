<div class="container mb-sm">
  <h2 class="title-lg mb text-center">
    Недавно добавились
  </h2>

  <div class="users-box">
    <% @users.each do |user| %>
      <%= render partial: 'users/user_avatar', locals: {user: user} %>
    <% end %>
  </div>
</div>

<div class="container mb-sm">
  <h2 class="title-lg mb text-center">
    Хештеги
  </h2>

  <div class="hashtags-box">
    <% @hashtags.each do |hashtag| %>
      <div>
        <%= render partial: 'hashtags/hashtag', locals: {hashtag: hashtag.body} %>
      </div>
    <% end %>
  </div>
</div>

<div class="container mt-sm mb-sm">
  <h2 class="title-lg">
    <%= inclination(@questions.count, 'Последний', 'Последние', 'Последние') %>
    <%= @questions.count %>
    <%= inclination(@questions.count, 'вопрос', 'вопроса', 'вопросов') %>
  </h2>
</div>

<% @questions.each do |question| %>
  <% if question.hidden? %>
    <div class="container hidden mb-sm">
      <%= render question%>
    </div>
  <% else %>
    <div class="container mb-sm">
      <%= render question%>
    </div>
  <% end %>
<% end %>
