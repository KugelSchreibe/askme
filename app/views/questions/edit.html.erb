<div class="container">
  <div class="mb-lg">
    <%= link_to fa_icon('arrow-left'), :back, title: 'Назад' %>
  </div>

  <h2 class="title-lg mb">Редактирование вопроса <%= @question.id %></h2>

  <%= form_with model: @question do |form| %>
    <p><%= form.label :body, 'Текст вопроса' %></p>
    <p><%= form.text_area :body, rows: 5, class: 'form-text-area' %></p>

    <p class="mt"><%= form.label :user_id %></p>
    <p><%= form.text_field :user_id, class: 'form-text-field' %></p>

    <p class="mt"><%= form.submit 'Сохранить', class: 'button button-main' %></p>
  <% end %>
</div>
