<h2 class="title-lg mb">Вопрос <%= question.id %></h2>

<div class="mb-sm">
  <%= simple_format h(question.body) %>
</div>

<div class="question-footer text-sm">
  <div class="text-gray">
    <%= l(question.created_at, format: :short) %>
  </div>

  <div class="mt">
    <%= link_to fa_icon('pencil'), edit_question_path(question), title: 'Изменить вопрос' %>
    <%= button_to fa_icon('trash-o'), question_path(question), method: :delete,
                  title: 'Удалить вопрос', form: {data: {turbo_confirm: 'Точно удалить вопрос?'}} %>

    <% unless question.hidden %>
      <%= button_to fa_icon('eye-slash'), hide_question_path(question), method: :put, title: 'Скрыть' %>
    <% end %>
  </div>
</div>